<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidObjectives.Views.ObjectivesPage" BackgroundColor="#000000">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Objectives"></ToolbarItem>
        <ToolbarItem Text="+" Clicked="OnItemAdded">
            <!--<ToolbarItem.IconImageSource>
                <OnPlatform x:TypeArguments="ImageSource">
                    <On Platform="Android, UWP"
                        Value="plus.png" />
                </OnPlatform>
            </ToolbarItem.IconImageSource>-->
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ListView x:Name="listView"
              Margin="20"
              ItemSelected="OnListItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Margin="20,0,0,0"
                                 Orientation="Horizontal">
                        <Label Text="{Binding ObjectiveName}" TextColor="#FFFFFF" />
                        <Label Text="{Binding Created}" TextColor="#FFFFFF" />
                        <Label Text="{Binding Path}" TextColor="#FFFFFF" />
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>